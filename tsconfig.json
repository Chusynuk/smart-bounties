{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"types": ["node", "jest"],
		"allowJs": true,
		"target": "ES2020",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"components": ["./src/app/components/index.tsx"],
			"pages": ["./src/app/pages/*"],
			"lib/*": ["./src/lib/*"],
			"providers": ["./src/app/providers/*"]
		}
	},
	"compileOnSave": true,
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
